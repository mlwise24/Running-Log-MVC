@using System.Drawing
@model IEnumerable<RunnersLog.Models.Run>

@{
    ViewBag.Title = "Index";
}

<h2 class="custom">Running Log</h2>
<br/>
<p>
    @Html.ActionLink("Enter New Run", "Create", null, new { id = "ot", style = "color:black" })


    @using (Html.BeginForm())
    {


        <br/>

    <p>
        Filter by Distance: @Html.TextBox("SearchString") 
        <br />

        <input type="submit" value="Filter" class ="btn btn-primary" />
    </p>

    
        <br/>




    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Distance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeartRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distance)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, style = "color:black" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}